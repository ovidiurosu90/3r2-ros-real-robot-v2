<?xml version="1.0" ?>
<launch>
    <arg name="serial_port" default="/dev/O_ttyUSB1" />
    <arg name="frame_id" default="imu_link" />
    <arg name="operation_mode" default="NDOF" /><!-- Use accelerometer, gyroscope and magnetometer (absolute orientation); defaults to IMU -->
    <arg name="oscillator" default="INTERNAL" />
    <arg name="reset_orientation" default="false" /><!-- Keep the orientation from boot; as odom keeps that one too -->
    <arg name="use_magnetometer" default="false" /><!-- Enables topic imu/magnetometer; defaults to false -->
    <arg name="use_temperature" default="false" />
    <arg name="frequency" default="13" /><!-- was 50, but I am trying to sync it with /scan which is 12.71 Hz -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="link1_broadcaster" args="0 0 0 0 0 0 1 base_link $(arg frame_id)" /> -->

    <node pkg="ros_imu_bno055" type="imu_ros.py" name="ros_imu_bno055_node" output="screen">
        <param name="serial_port" value="$(arg serial_port)" />
        <param name="frame_id" value="$(arg frame_id)" />
        <param name="operation_mode" value="$(arg operation_mode)" />
        <param name="oscillator" value="$(arg oscillator)" />
        <param name="reset_orientation" value = "$(arg reset_orientation)" />
        <param name="use_magnetometer" value="$(arg use_magnetometer)" />
        <param name="use_temperature" value="$(arg use_temperature)" />
        <param name="frequency" value="$(arg frequency)" />
    </node>

</launch>

